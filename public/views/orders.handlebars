<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h2>Orders</h2>
      {{#if orders.length}}
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Order ID</th>
            <th>Fit IDs</th>
            <th>Total</th>
          </tr>
        </thead>
        <tbody>
          {{#each orders}}
          <tr>
            <td>{{this.orderID}}</td>
            <td>{{this.fitIDs}}</td>
            <td>${{this.price}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
      {{else}}
      <p>No orders found.</p>
      {{/if}}
    </div>
  </div>
</div>